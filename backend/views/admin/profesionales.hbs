<div class="container-sm text-center" style="margin: 10px auto">
    <div class="row">
        <div class="col"></div>
        <div class="col mt-2 text-center">
            <h3 class="text-success"> Hola {{ usuario }}!
            </h3>
        </div>
        <div class="col text-end">
            <a class="btn btn-outline-danger" href="/admin/login/logout"><i class="bi bi-box-arrow-left"></i> Cerrar
                sesión</a>
        </div>
    </div>

</div>

<div class="container-sm">
    <div>
        <div class="col text-center">
            <h3>Nuestros Profesionales</h3>
        </div>
        <div class="col-5 mb-2">
            <a class="btn btn-success" href="/admin/profesionales/agregar"><i class="bi bi-plus-lg" aria-hidden="true"></i> Añadir</a>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col text-start">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Título</th>
                            <th scope="col">Universidad</th>
                            <th scope="col">Matrícula</th>
                            <th scope="col">Foto</th>

                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each profesionales}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{apellido}}</td>
                            <td>{{titulo}}</td>
                            <td>{{universidad}}</td>
                            <td>{{matricula}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end p-2">
                                <a class="btn btn-secondary mt-1" href="/admin/profesionales/modificar/{{id}}"><i class="bi bi-pencil"
                                        aria-hidden="true"></i></a>
                                <a class="btn btn-secondary mt-1" href="/admin/profesionales/eliminar/{{id}}"><i class="bi bi-trash"
                                        aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>