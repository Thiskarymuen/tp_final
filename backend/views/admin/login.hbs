<div class="container-fluid">
    <div class="row">

        <div class="modal modal-sheet position-static d-block py-5" tabindex="-1" role="dialog" id="modalSheet">
            <div class="modal-dialog" role="document">
                <div class="modal-content rounded-4 shadow">
                    <div class="modal-header border-bottom-0">
                        <h1 class="modal-title fs-5">Identificarse</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body py-0">
                        <h6 class="text-dark">Bienvenido a la administración de "Psicología Caballito" </h6>
                        <p class="text-secondary"> Porfavor, ingrese Usuario y Contraseña</p>

                    </div>
                    <div class="flex-column modal-body">

                        <form action="/admin/login" method="post">
                            <div class="mb-3 row">
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="inputUser" placeholder="Usuario"
                                        name="usuario">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <div class="col-sm-8">
                                    <input type="password" name="password" id="inputPassword" class="form-control"
                                        placeholder="Contraseña">
                                </div>
                            </div>


                            {{#if error}}
                            <p class="text-danger m-1">Clave o Usario incorrecto</p>
                            {{/if}}

                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>





    </div>
</div>